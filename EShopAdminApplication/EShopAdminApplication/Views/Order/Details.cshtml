@{
}

@model EShopAdminApplication.Models.Order

<div class="container">
    <div>
        <p>Order for @Model.Owner.UserName</p>
    </div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Quantity
				</th>
				<th>
					Concert
				</th>
				<th>
					Singe Price
				</th>
				<th>
					Total Price
				</th>
				<th>
					Rating
				</th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < Model.ProductInOrders.Count(); i++)
			{
				var item = Model.ProductInOrders.ElementAt(i).OrderedProduct;

				<tr>
					<td>
						@Model.ProductInOrders.ElementAt(i).Quantity
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ConcertId)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						@(item.Price * Model.ProductInOrders.ElementAt(i).Quantity)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Rating)
					</td>
				</tr>
			}
		</tbody>
    </table>
</div>